@model FinalBoss.Models.Hero

@{    ViewData["Title"] = "Hero List";
    Layout = "_Layout";
}

<h2>Add dis hero</h2>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype="multipart/form-data"}))
{
    <p>
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name)
   </p>
    <p>
        @Html.LabelFor(model => model.Weapon)
        @Html.TextBoxFor(model => model.Weapon)
    </p>

    <p>
        Upload Image
        <input type="file" id="Image" name="Image" />
    </p>

    <input type="submit" value="Enter Boss"/>
}
<p>
    @Html.ActionLink("Return to boss list", "Index")
</p>
@model FinalBoss.Models.Hero

@{    ViewData["Title"] = "Hero Details";
    Layout = "_Layout";
}

<h1>@Model.Name</h1>
@if(Model.Picture != null)
{
    <p>
        <img src='@Url.Action("GetPicture", "Hero", new { id = Model.HeroId})'/>
    </p>
}
else
{
    <p>
       no pics. imagination works best.
    </p>
}
    <p>
        Weapon: @Model.Weapon
    </p>

    @foreach(var boss in Model.Bosses)
    {
        <p><img class="thumbnail" src='@Url.Action("GetPicture", "Boss", new { id = @boss.BossId })'/>@boss.Name</p>
    }
    <p>@Html.ActionLink("Return to boss list", "Index")</p>